
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @list.photo.key, height: 300%>')">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>


<div class="container">

  <div class="cards">
    <% @hash_array.each do |hash| %>
      <div class="card-movie">
        <img src="<%=hash[:movie].poster_url=%>" alt="movie_poster">
        <div class="card-movie-infos">
          <div>
            <h2><%= hash[:movie].title %> - <%= hash[:movie].rating.round(1) %> <i class="fa-solid fa-star"></i></h2>
            <p><%= hash[:movie].overview %></p>
            <br>
            <div class ="d-flex justify-content-between align-items-center">
              <div>
                <p><strong><em> <i class="fa-solid fa-quote-right"></i><%= hash[:comment] %><i class="fa-solid fa-quote-right"></i></em></strong></p>
              </div>
              <div>
                <p> <%= link_to "Remove comment", bookmark_path(hash[:bookmark_id]), method: :delete, class: "btn-delete" %> </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to "Rajouter un bookmark", new_list_bookmark_path(@list), class: "btn btn-success" %> </p>
  <%= link_to "Revenir", lists_path, class: "btn btn-outline-warning" %> </p>


</div>
